{
    "name": "roni-estein/press",
    "description": "An elegant markdown-powered blog for the Laravel framework.",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Gonzalez",
            "email": "vicgonvt@gmail.com"
        },
        {
            "name": "Roni Estein",
            "email": "roni.estein@gmail.com"
        }
    ],
    "require": {
        "erusev/parsedown": "^1.7",
        "php": "^7.4|^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^5.0",
        "laravel/legacy-factories": "^1.0",
        "phpunit/phpunit": "^9.3.10",
        "pestphp/pest": "^0.3.7",
        "pestphp/pest-plugin-laravel": "^0.3.0"
    },
    "autoload": {
        "psr-4": {
            "RoniEstein\\Press\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RoniEstein\\Press\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RoniEstein\\Press\\PressBaseServiceProvider"
            ]
        }
    }
}
